@model ProgettoFinale_GuidoCafarelli.Prodotti

@{
    ViewBag.Title = "AggiungiNuovoProdotto";
}

<h2 class="text-center my-3" style=" color: #e00025; font-weight: 300; text-shadow: 1px 1px #1f3372">Aggiungi Nuovo Prodotto</h2>

@using (Html.BeginForm("AggiungiNuovoProdotto", "Prodotti", null, FormMethod.Post, new {enctype="multipart/form-data"})) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal col-8 text-center p-5" style="margin: 0 auto; justify-content: center; border: 5px solid #1f3372; border-radius: 25px; background-color: #ffd101; color: #1f3372 ">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2 labelNew" })
        <div class="my-2">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @style = "width:60%;margin:0 auto" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.filename, htmlAttributes: new { @class = "control-label col-md-2 labelNew" })
        <div class="my-2">
            <input type="file" name="img" />
            @Html.ValidationMessageFor(model => model.filename, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.Label("Categoria", htmlAttributes: new { @class = "control-label col-md-2 labelNew" })
        <div class="my-2">
            @Html.DropDownListFor(model => model.idCategoria, new SelectList(ViewBag.ListaCategorie, "Value", "Text"), "------Seleziona Categoria------", new { @class = "form-control text-center", @style = "width:60%;margin:0 auto" })
            @Html.ValidationMessageFor(model => model.idCategoria, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label col-md-2 labelNew" })
        <div class="my-2">
            @Html.EditorFor(model => model.Prezzo, new { htmlAttributes = new { @class = "form-control", @style = "width:60%;margin:0 auto" } })
            @Html.ValidationMessageFor(model => model.Prezzo, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        <div class="my-3">
            <input type="submit" value="Aggiungi" class="btn  text-white p-1" style="text-decoration: none; background-color: #e00025; margin:0 auto; width:300px" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
